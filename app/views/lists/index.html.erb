<%= render_breadcrumbs builder: Sufia::BootstrapBreadcrumbsBuilder %>
<h1>Lists</h1>

<% @lists.each do |list| %>

  <div id="<%= list.pref_label.parameterize("_") %>_list">
    <h2><%= list.pref_label %></h2>
    <% unless list.description.empty? %>
      <h3>Description</h3>
      <p><%= list.description %></p>
    <% end %>
    <%= link_to "Modify items", list_path(list), class: "btn btn-primary" %>
  </div>
<% end %>
